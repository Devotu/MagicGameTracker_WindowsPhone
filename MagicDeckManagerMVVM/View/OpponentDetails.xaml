<UserControl x:Class="MagicGameTracker.View.OpponentDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="lblName" Grid.Row="0" Height="30" Text="Name" FontWeight="Bold"/>
        <TextBlock Name="txtName" Grid.Row="1" Height="30" HorizontalAlignment="Left" Margin="12,0,0,0" Text="{Binding Path=Name, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="416"/>
    </Grid>
</UserControl>
