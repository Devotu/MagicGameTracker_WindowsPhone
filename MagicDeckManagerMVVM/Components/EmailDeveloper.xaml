<UserControl x:Class="MagicGameTracker.Components.EmailDeveloper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Height="72" Grid.Row="0" HorizontalAlignment="Left" Name="tbSubject" Text="Subject" VerticalAlignment="Top" Width="480" GotFocus="tbSubject_GotFocus" LostFocus="tbSubject_LostFocus" />
        <TextBox Height="121" Grid.Row="1" HorizontalAlignment="Left" Name="tbCommentsToSend" Text="Comment" TextWrapping="Wrap" VerticalAlignment="Top" Width="480" GotFocus="tbCommentsToSend_GotFocus" LostFocus="tbCommentsToSend_LostFocus" />
        <Button Grid.Row="2" Content="Send comments" Height="72" HorizontalAlignment="Center" Margin="0,0,0,0" Name="bSendEmail" VerticalAlignment="Top" Width="374" Click="bSendEmail_Click" />
    </Grid>
</UserControl>
